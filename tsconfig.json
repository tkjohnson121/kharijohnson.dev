{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "common": ["common/"],
      "features": ["features/"],
      "pages": ["pages/"],
      "theme": ["features/theme"],
      "utils": ["utils/"]
    },
    "types": ["node", "@emotion/core", "jest"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["**/*.ts", "**/*.tsx"]
}
